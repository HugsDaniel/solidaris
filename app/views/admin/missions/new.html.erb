<div class="container"></div>
<div class="row" id="category-title">
  <div class="col-md-10 col-md-offset-1">
    <div class="form-group height-form-category second text-center">
      <br>
      <h4 form-control-label class="text-left">Quelle est la catégorie de ce besoin ? </h4>
      <br>
      <label class="control-label check_boxes optional"></label>
      <%= simple_form_for [:admin, @organization, @mission], url: admin_organization_missions_path(@organization, @mission), method: :post do |f| %>
        <% Mission.categories.values.shuffle.each do |category| %>
          <input type="radio" class="hidden" id="mission_category_<%= category.downcase %>" value="<%= category %>" name="mission[category]">
          <label for="mission_category_<%= category.downcase %>">
            <div class="shadow-missions">
              <div class="shadow-missions">
                <div class="js-category-choice form-missions-cards" style="text-align:center;">
                  <%= form_svg_div(category) %>
                  <h2><%= category %></h2>
                  <div class="border-bottom gradient-<%=category.downcase %>"></div>
                  <div class="overlay-2 gradient-<%=category.downcase %>">
                    <%= white_form_svg_div(category) %>
                    <h3><%= category %></h3>
                  </div>
                </div>
              </div>
            </div>
          </label>
        <% end %>
      <br><br><br><br>
      <div class="btn-container col-md-offset-5">
        <a class="btn btn-primary" data-scroll href="#first" type="button">Suivant</a>
      </div>
    </div>
  </div>
</div>
<div class="row height-form" id="first">
  <div class="col-md-6">
    <%= f.input :title, label: 'Quel titre souhaitez-vous donner à votre besoin ?' %>
    <label class="control-label check_boxes optional"></label>
    <%= f.input :address, placeholder: "", label: "Où aura lieu ce besoin ?" %>   <!--  , input_html: { id: "address-auto" } -->
    <br>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :starting_at, as: :string, required: false, input_html: {class: "datepicker"}, label: 'A quelle date se déroulera cette mission ? ' %>
      </div>
      <div class="col-md-6">
        <%= f.input :duration_in_hours,  label: 'Combien d\'heures durera cette mission ?'%>
      </div>
    </div>
    <br><br><br><br><br>
    <div class="row">
      <div class="col-md-5 col-md-offset-9">
        <a class="btn btn-primary" data-scroll href="#second" type="button">Suivant</a>
      </div>
    </div>
  </div>
</div>
<div class="row height-form">
  <div class="col-md-6">
    <div id="second">
      <div class="row">
        <div class="col-md-12">
          <%= f.input :volunteers_needed, label: 'Combien de volontaires recherchez-vous ?' %>
        </div>
      </div>
      <%= f.input :description, label: 'Ajoutez une description pour recevoir plus de candidatures' %>
      <%= f.input :skills_needed, label: 'Quel type de profil recherchez-vous ?' %>
      <div class="btn-container col-md-offset-9">
        <%= f.submit "Créer", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>
