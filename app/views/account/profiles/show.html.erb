<div class="banner">
  <div class="banner-show-green-background">
    <h1 class="text-center"><%= "#{@user.first_name} #{@user.last_name}" %></h1>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="show-profile-wrap">
      <div>
        <%= cl_image_tag @user.picture, class: "profile-picture" %>
      </div>
      <div>
        <p class="text-align"><%= @user.description %></p>
        <p><strong>Contact: </strong><%= @user.email %></p>
        <p><strong>Compétences: </strong><%= @user.skills %></p>
        <p><strong>Expériences: </strong><%= @user.experiences %></p>
        <%= link_to "Editer votre profil", edit_account_profile_path(@user), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <h4><strong>Mes missions en cours</strong></h4>
  <div class="row">
    <% @user.missions.each do |mission| %>
      <div class="col-xs-12 col-sm-4">
        <div class="missions-cards">
          <%= link_to mission_path(mission) do %>
            <%= svg_div(mission.category) %>
            <h2><%= mission.title %></h2>
            <p><%= mission.organization.name%></p>
            <%= image_tag "looking-for.png", class: 'looking-for'%>
              <!-- <h3 class="volunteer"><%#= mission.volunteers_needed %></h3>
              <p><%#= mission.starting_at %></p> -->
            <div class="date">
              <%= mission.starting_at.strftime('%d %B') %>
            </div>
          <%end  %>
        </div>
      </div>
    <% end %>
  </div>
</div>
