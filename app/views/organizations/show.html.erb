<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="banner-mission-content">
      <h3><%= @organization.name %></h3>
      <div class="meta-item " >Équipe: <%= @organization.total_volunteers %> bénévoles</div>
      <div class="meta-item " >Catégorie: <%= @organization.category %> </div>
      <div class="meta-item " >Année de création: <%= @organization.creation_year %> </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="banner-mission-content">
      <h2>Description</h2>
      <p><%= @organization.description %></p>
    </div>
  </div>
</div>
<div class="other-container"></div>
  <div class="mission-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Nos missions à pourvoir</h2>
        <div class="row">
          <% @organization.missions.each do |mission| %>
            <div class="col-xs-12 col-md-6">
              <%= link_to mission_path(mission) do %>
              <div class="missions-cards">
                <%= svg_div(mission.category) %>
                  <h2><%= mission.title %></h2>
                  <p><%= mission.organization.name%></p>
              </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
