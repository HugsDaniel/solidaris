<% if controller_name == "missions" && action_name == "show" %>
    <div class="navbar-wagon-show gradient-<%=@mission.category.downcase %>">
      <%= link_to missions_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "motivation.svg", height: 50 %>"
      <% end %>

<% elsif controller_name == "organizations/missions" && action_name == "index" %>
  <div class="navbar-wagon data-scroll-header scroll">
      <%= link_to missions_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "fist.png", height: 50 %>
      <% end %>

<% elsif controller_name == "missions" && action_name == "index" %>
    <div class="navbar-wagon">
      <%= link_to missions_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "fist.png", height: 50 %>
      <% end %>

<% else %>
    <div class="navbar-wagon">
      <%= link_to missions_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "fist.png", height: 50 %>
      <% end %>
<% end %>

  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Missions", missions_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Associations", organizations_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Tableau de Bord", account_missions_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Profil", account_profile_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu" aria-labelledby="navbar-wagon-menu" >
            <% if @user.manager %>
              <li>
                <%= link_to "Administration", admin_organizations_path %>
              </li>
            <% end %>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <%= link_to 'Se connecter', new_user_session_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
