<div class="show-container gradient-<%=@mission.category.downcase %>">
  <div class="first-background-container">
    <div class="row">
      <div class="col-md-5 col-md-offset-1">
        <div class="banner-mission-content">
          <h1><%= @mission.title %></h1>
          <div>
            <div class="meta-item " > Commence le <%= l(@mission.starting_at, format: :short) %> - </div>
            <div class="meta-item " >  <%= @mission.volunteers_needed %> volontaires demandés</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="background-container">
    <div class="row">
      <div class="col-md-5 col-md-offset-1">
        <div class="banner-mission-content">
          <h2>Description</h2>
            <p><%= @mission.description %></p>
          <h2>Peine encourue</h2>
            <p> <%= @mission.duration_in_hours %> heures </p>
          <h2>Profil recherché </h2>
            <% if @mission.skills_needed.nil? || @mission.skills_needed == "0" %>
              <p> Aucun profil particulier recherché</p>
            <% else %>
              <p><%= @mission.skills_needed %></p>
            <% end %>
          <% unless @mission.users.include? current_user %>
            <div class= "button-more-2 gradient-<%=@mission.category.downcase %> button-white-<%=@mission.category.downcase %>">
              <%= link_to "Participer à cette mission", mission_applications_path(@mission), method: :post %>
            </div>
          <% else %>
            <div class= "button-more-2">Vous participez déjà à cette mission !</div>
          <% end %>
        </div>
      </div>
      <div class="col-md-4 col-md-offset-1">
        <div class="banner-mission-organization">
          <h3 class= "text-justify"><%= @mission.organization.name %></h3>
          <h2> Description </h2>
          <div class="asso-desc">
            <p class= "text-center"><%=@mission.organization.description.first(500)%></p>
          </div>
          <div class= "button-more-2 gradient-<%=@mission.category.downcase %> button-white-<%=@mission.category.downcase %>">
            <%= link_to "En savoir plus", organization_path(@organization) %>
          </div>
        </div>
      </div>
    </div>
  </div>
<br><br>
